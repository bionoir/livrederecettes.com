{% extends "::layout.html.twig" %}

{% block title %}
     {{ parent() }}
{% endblock %}
    
{% block body %}
    {% block fdalivrederecettes_body %}
        {% for type, messages in app.session.flashBag.all %}
            {% for message in messages %}
                <div class="{{ type }}">
                    {{ message|trans({}, 'FOSUserBundle') }}
                </div>
            {% endfor %}
        {% endfor %}

        <div>
            {% block fos_user_content %}
            {% endblock fos_user_content %}
        </div>
    {% endblock %}
{% endblock %}
