{# src/FD/LivrederecettesBundle/Resources/views/Menu/viewMenu.html.twig #}
{% extends "FDLivrederecettesBundle::layout.html.twig" %}
 
{% block title %}
    {{ parent() }} - Détail d'un menu
{% endblock %}
 
{% block fdalivrederecettes_body %}
 
  <h4>{{ menu.title }}</h4>
  
  <div class="well">
    {% if menu.dated == true %}
          Menu daté du {{ menu.dateFrom }} au {{ menu.dateTo }}.
    {% else %}
          Menu non daté.
    {% endif %}
          
    <table>
        {% for meal in meals %}
        <tr>
            <td>{{ meal.recipe.title }}</td>
            <td>{{ meal.mealType.name }}</td>
        </tr>
        {% endfor %}
    </table>
  </div>
   
  <p>
    <a href="{{ path('livrederecettes_listMenus') }}" class="btn btn-default btn-sm">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à la liste
    </a>
    <a href="{{ path('livrederecettes_modifyMenu', {'id': menu.id}) }}" class="btn btn-primary btn-sm">
      <i class="glyphicon glyphicon-edit"></i>
      Modifier le menu
    </a>
    <a href="{{ path('livrederecettes_deleteMenu', {'id': menu.id}) }}" class="btn btn-danger btn-sm">
      <i class="glyphicon glyphicon-trash"></i>
      Supprimer le menu
    </a>
  </p>
  
  <p>
      <a href="{{ path('livrederecettes_generateShoppingList', {'menuId': menu.id}) }}" class="btn btn-success btn-sm">
          <i class="glyphicon glyphicon-shopping-cart"></i>
          Génération liste course
      </a>  
  </p>
 
{% endblock %}
