{# src/FD/LivrederecettesBundle/Resources/views/Menu/listMenus.html.twig #}
{% extends "FDLivrederecettesBundle::layout.html.twig" %}

{% block title %}
    {{ parent() }} - Liste des menus enregistrés dans le système
{% endblock %}

{% block fdalivrederecettes_head %}
    <h4 class="panel-title">Liste des menus présents dans le système</h4>
{% endblock %} 
    
{% block fdalivrederecettes_body %}
    <ul>
        {% for menu in listMenus %}
            <li>
                <a href="{{ path('livrederecettes_viewMenu', {'id': menu.id}) }}">{{ menu.title }}</a>
            </li>
        {% else %}
            <li>Pas (encore !) de menus dans le système!</li>
        {% endfor %}
    </ul>
    
    <a class="btn btn-small btn-primary" href="{{ path('livrederecettes_addMenu') }}"><i class="glyphicon glyphicon-plus"></i> Ajouter un menu</a>
{% endblock %}
