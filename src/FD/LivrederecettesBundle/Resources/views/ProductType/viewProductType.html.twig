{# src/FD/LivrederecettesBundle/Resources/views/ProductType/viewProductType.html.twig #}
{% extends "FDLivrederecettesBundle::layout.html.twig" %}
 
{% block title %}
    {{ parent() }} - Détail d'un type de produit
{% endblock %}
 
{% block fdalivrederecettes_body %}
 
  <h2>{{ productType.value }}</h2>
  
  <div class="well">
    {{ productType.description }}
  </div>
  
  <p>
    <a href="{{ path('livrederecettes_listProductTypes') }}" class="btn">
      <i class="icon-chevron-left"></i>
      Retour à la liste
    </a>
    <a href="{{ path('livrederecettes_modifyProductType', {'id': productType.id}) }}" class="btn">
      <i class="icon-edit"></i>
      Modifier le type de produit
    </a>
    <a href="{{ path('livrederecettes_deleteProductType', {'id': productType.id}) }}" class="btn">
      <i class="icon-trash"></i>
      Supprimer le type de produit
    </a>
  </p>
 
{% endblock %}
