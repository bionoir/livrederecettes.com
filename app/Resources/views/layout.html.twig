{# app/Resources/views/layout.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}Livre de recettes{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.min.css') }}" type="text/css" />
            <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap-theme.min.css') }}" type="text/css" />
            <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap-glyphicons.css') }}" type="text/css" />
            <link rel="stylesheet" href="{{ asset('bundles/fdlivrederecettes/css/jquery-ui-1.10.4.min.css') }}" type="text/css" />
            <link rel="stylesheet" href="{{ asset('bundles/fdlivrederecettes/css/bootstrap3_vertical_offset.css') }}" type="text/css" />
            <link rel="stylesheet" href="{{ asset('bundles/fdlivrederecettes/css/testNavigation.css') }}" type="text/css" />
        {% endblock %}
        {% block javascripts %}
            {# Ajoutez ces javascripts si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
            <script type="text/javascript" src="{{ asset('bundles/fdlivrederecettes/js/jquery-1.11.0.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bundles/fdlivrederecettes/js/jquery-ui-1.10.4.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('bootstrap/js/bootstrap.min.js') }}"></script>
        {% endblock %}
    </head>
    
    <body>
        
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
              <!-- Brand and toggle get grouped for better mobile display -->
              <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Livre de recettes</a>
              </div>

              <!-- Collect the nav links, forms, and other content for toggling -->
              <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                  <li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li>
                  <li><a href="#">Link</a></li>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Dropdown <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                      <li><a href="#">Action</a></li>
                      <li><a href="#">Another action</a></li>
                      <li><a href="#">Something else here</a></li>
                      <li class="divider"></li>
                      <li><a href="#">Separated link</a></li>
                      <li class="divider"></li>
                      <li><a href="#">One more separated link</a></li>
                    </ul>
                  </li> 
                </ul>
                         
                <form class="navbar-form navbar-left" role="search">
                  <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search">
                  </div>
                  <button type="submit" class="btn btn-default">Submit</button>
                </form>
                      
                <ul class="nav navbar-nav navbar-right">
                  <li><a href="#">Link</a></li>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Dropdown <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                      <li><a href="#">Action</a></li>
                      <li><a href="#">Another action</a></li>
                      <li><a href="#">Something else here</a></li>
                      <li class="divider"></li>
                      <li><a href="#">Separated link</a></li>
                    </ul>
                  </li>
                  {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <li><a href="{{ path('fos_user_profile_show') }}">{{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}</a></li>
                    <li><a href="{{ path('fos_user_security_logout') }}">
                        {{ 'layout.logout'|trans([], 'FOSUserBundle') }}
                        </a></li>
                  {% else %}
                    <li><a class="btn btn-primary" href="{{ path('fos_user_security_login') }}">Connexion</a></li>
                    <li><a class="btn btn-primary" href="{{ path('fos_user_registration_register') }}">S'inscrire</a></li>
                  {% endif %}
                </ul>
                      
              </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
          </nav>
        
        <div class="container">
        
            <!-- Titre principal, inchangé le long de la navigation -->
            <div class="jumbotron">
                <h1>On teste ^^</h1>
                <p>
                    Collection de recettes permettant la consultation, insertion, création de menus et liste pour achat.
                </p>

            </div>
            {% block body %}
            {% endblock %}
        </div>
        
        {% block javascriptsend %}
        {% endblock %}
    </body>
</html>
